# Railway部署环境变量配置
# 复制以下内容到Railway项目的Environment Variables中

# ===========================================
# 核心服务配置
# ===========================================

# 数据库配置 (Railway会自动提供DATABASE_URL，如果使用Railway的数据库服务)
DATABASE_URL=sqlite:///./news_monitoring.db

# API服务配置
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# ===========================================
# 跨域配置 (重要：包含您的前端域名)
# ===========================================

# CORS配置 - 添加您的EdgeOne Pages域名
CORS_ORIGINS=["https://your-edgeone-domain.com", "http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:5173", "http://127.0.0.1:5173", "*"]

# ===========================================
# 外部API配置
# ===========================================

# GDELT API配置
GDELT_DOC_API_URL=https://api.gdeltproject.org/api/v2/doc/doc
GDELT_EVENT_API_URL=https://analysis.gdeltproject.org/module-event-exporter.html

# 可选：GDELT API密钥（如果需要）
# GDELT_API_KEY=your_gdelt_api_key_here

# 可选：Grok API密钥（如果需要竞争对手分析功能）
# GROK_API_KEY=your_grok_api_key_here

# ===========================================
# 日志配置
# ===========================================

LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ===========================================
# 任务调度配置
# ===========================================

ENABLE_SCHEDULER=true
TIMEZONE=Asia/Shanghai

# ===========================================
# 文件存储配置
# ===========================================

EXPORT_PATH=./exports/
UPLOAD_PATH=./uploads/

# ===========================================
# Railway特定配置
# ===========================================

# Railway会自动设置PORT环境变量，但我们也可以指定
PORT=8000

# Python版本（可选，Railway通常会自动检测）
PYTHON_VERSION=3.11

# ===========================================
# 生产环境优化配置
# ===========================================

# 关闭调试模式
DEBUG=false

# 设置生产环境
ENVIRONMENT=production

# 限制工作进程数量（Railway有资源限制）
WORKERS=1

# ===========================================
# 安全配置
# ===========================================

# 如果使用HTTPS，启用安全头
SECURE_SSL_REDIRECT=true
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https